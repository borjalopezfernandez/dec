
# Here are defined all the environment variables required for
# the Data Exchange Component (both DDC & DCC)

export MINARC_BASE=$DEC_BASE

export RACK_ENV=production

export MINARC_SERVER=http://localhost:4567

export MINARC_DB_ADAPTER=sqlite3

export MINARC_DATABASE_USER=root

export MINARC_DATABASE_PASSWORD=1mysql

export DCC_TMP=/vagrant/sandbox/minarc_root/0.tmp

export TMP_DIR=/vagrant/sandbox/minarc_root/0.tmp

export MINARC_TMP=/vagrant/sandbox/minarc_root/0.tmp

export MINARC_DATABASE_NAME=/vagrant/sandbox/minarc_root/inventory/minarc_inventory

export MINARC_ARCHIVE_ROOT=/vagrant/sandbox/minarc_root/archive

export MINARC_ARCHIVE_ERROR=/vagrant/sandbox/minarc_root/0.errors

export MINARC_CONFIG=$MINARC_BASE/config

export PATH=$PATH:$MINARC_BASE/code/arc

export RUBYLIB=$DEC_BASE/code


unset USERNAME

