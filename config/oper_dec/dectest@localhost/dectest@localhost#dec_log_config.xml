<log4r_config>
 
 <pre_config>
  <parameter name="mainLoggerName" value="DEC_LOG"/>
 </pre_config>
 
  <!-- ================================================ -->
 
  <outputter name="dec_log_rolling" level="DEBUG">
      
      <type>RollingFileOutputter</type>
      
      <filename>/tmp/DEC.log</filename>
      
      <formatter type="PatternFormatter" pattern="[%5l] %d %c.#{moduleName} - %m">
         <date_pattern>%Y-%m-%d %H:%M:%S</date_pattern>
      </formatter>
      
      <trunc>false</trunc>
      
      <maxsize>5000000</maxsize>
  
      <max_backups>3</max_backups>
 
      <maxtime>2592000</maxtime>
 
 </outputter>

 <!-- ================================================ -->

<outputter name='dec_log_console'>
   <type>StdoutOutputter</type>

    <formatter type="PatternFormatter" pattern="[%5l] %d %c.#{moduleName} - %m">
      <date_pattern>%Y-%m-%d %H:%M:%S</date_pattern>
    </formatter>


</outputter>

   <!-- ================================================ -->

 <logger name="DEC_LOG" level="DEBUG" trace="false"> 
    <outputters>dec_log_rolling</outputters>
    <outputters>dec_log_console</outputters>
 </logger>
 
</log4r_config>
