<log4r_config>
 
 <pre_config>
  <parameter name="mainLoggerName" value="DEC_TEST"/>
 </pre_config>
 
 <outputter name="dec_log" level="INFO">
  
  <type>RollingFileOutputter</type>

  <filename>/tmp/DEC.log</filename>

  <formatter type="PatternFormatter" pattern="[%5l] %d %c.#{moduleName} - %m">
      <date_pattern>%Y-%m-%d %H:%M:%S</date_pattern>
  </formatter>

  <trunc>false</trunc>

  <maxsize>10000000</maxsize>

  <max_backups>4</max_backups>

  <maxtime>2592000</maxtime>

 </outputter>

 <logger name="DEC_TEST" level="DEBUG" trace="false">
   <outputters>dec_log</outputters>
 </logger>
 
</log4r_config>
