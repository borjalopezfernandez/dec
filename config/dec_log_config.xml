<log4r_config>
 
 <pre_config>
  <parameter name="mainLoggerName" value="METEO"/>
 </pre_config>
 
 <outputter name="meteo_casale_log" level="ERROR">
      
      <type>RollingFileOutputter</type>
      
      <filename>/tmp/MeteoCasale.log</filename>
      
      <formatter type="PatternFormatter" pattern="[%5l] %d %c.#{moduleName} - %m">
         <date_pattern>%Y-%m-%d %H:%M:%S</date_pattern>
      </formatter>
      
      <trunc>false</trunc>
      
      <maxsize>5000000</maxsize>
  
      <max_backups>3</max_backups>
 
      <maxtime>2592000</maxtime>
 
 </outputter>

 <logger name="METEO" level="ERROR" trace="false">
  <outputters>meteo_casale_log</outputters>
 </logger>
 
</log4r_config>
