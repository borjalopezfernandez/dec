# Here they are defined all the environment variables required for
# the Data Distributor Component
source $HOME/local/dec/data/conf/profile_common
source $HOME/local/dec/data/conf/profile_ddc
source $HOME/local/dec/data/conf/profile_dcc

# Here they are defined all the environment variables required for
# the RPF File Transfer Component
export PATH=$PATH:$DEC_BASE/code/rpf

export RPF_ARCHIVE_ROOT=/home/projects/decdev/rpf/archiveRoot
export FTPROOT=/home/projects/decdev/rpf/ftpRoot

# Additional variables for RPF backup tool

export DATABASE_USER=$DCC_DATABASE_USER
export DATABASE_PASSWORD=$DCC_DATABASE_PASSWORD

export RPFROOT=/home/projects/decdev/rpf
export RPFTMPDIR=/home/projects/decdev/rpf/tmp
export RPFCONFIG=/home/projects/decdev/rpf/config
export RPFDEV=/home/projects/decdev/rpf
