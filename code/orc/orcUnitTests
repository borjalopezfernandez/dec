   def test_commandline_helpers
      
      
      @@conf.wrapper_unset_config
      
      cmd = "orcIngeter"
      assert(!system(cmd), cmd)

      @@conf.wrapper_load_config_development

      cmd = "orcIngester -v"
      assert(system(cmd), cmd)

   end
   # --------------------------------------------------------

   def test_parsers
      
