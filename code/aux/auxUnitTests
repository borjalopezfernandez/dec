      @@logger.debug(cmd)
      ret = system(cmd)
        
      file_tca = "\"#{@@testDir}/gp.php?GROUP=active&FORMAT=2le\""
      cmd      = "auxConverter -m NAOS -f #{file_tca} -d /tmp/aux_out2"
      @@logger.info(cmd)
