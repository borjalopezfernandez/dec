   def test_checkConfig

      cmd = "decManageDB -c"
      ret = system(cmd)

      cmd = "decConfigInterface2DB -p EXTERNAL"
      ret = system(cmd)      

# To avoid check of the IERS interface
# whose connectivity might change

      cmd = "decCheckConfig -e LOCALHOST_NOT_SECURE -D"
      assert(system(cmd), cmd)

      cmd = "decCheckConfig -e LOCALHOST_NOT_SECURE --nodb"
      assert(system(cmd), cmd)

      cmd = "decCheckConfig -h"
      assert(system(cmd), cmd)
      
      cmd = "decCheckConfig -v"
      assert(system(cmd), cmd)

      cmd = "decCheckConfig -i"
