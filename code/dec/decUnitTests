      require 'ctc/ReadInterfaceConfig'
      
      
      ftReadConf = CTC::ReadInterfaceConfig.instance
      ftReadConf.update
      ftpRecv    = ftReadConf.getFTPServer("LOCALHOST_NOT_SECURE")
      
      puts
      puts ftpRecv
      puts

      # ftpSend    = ftReadConf.getFTPServer("LOCALHOST_NOT_SECURE")
   end
