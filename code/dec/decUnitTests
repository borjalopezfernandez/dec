   def test_checkConfig

      cmd = "chmod 500 ~/Sandbox/dec/dec_sent_file"
      puts cmd
      system(cmd)

      cmd = "decCheckConfig -e -D"
      assert(!system(cmd), cmd)

      cmd = "chmod 755 ~/Sandbox/dec/dec_sent_file"
      puts cmd
      system(cmd)

      cmd = "decCheckConfig -e -D"
      assert(system(cmd), cmd)


      cmd = "decCheckConfig -h"
      assert(system(cmd), cmd)
      
      cmd = "decCheckConfig -v"
      assert(system(cmd), cmd)

      cmd = "decCheckConfig -e --nodb"
      assert(system(cmd), cmd)

      cmd = "decCheckConfig -i"
      assert(system(cmd), cmd)

