      cmd = "decValidateConfig -m"
      assert(system(cmd), cmd)

      cmd = "decValidateConfig -l"
      assert(system(cmd), cmd)

      cmd = "decValidateConfig -t"
      assert(system(cmd), cmd)

      cmd = "decValidateConfig -g"
      assert(system(cmd), cmd)

      cmd = "decValidateConfig -a"
      assert(system(cmd), cmd)

   end
